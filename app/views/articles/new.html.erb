<h1>New Article</h1>



<%= form_with model: @article, local: true do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
        <% @article.errors.full_messages.each do |msg| %>
       <div><%= msg %></div>
       <% end %>
    </div>

    <div>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
        <% @article.errors.full_messages.each do |msg| %>
       <div><%= msg %></div>
       <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>

<%= link_to 'Back to Articles', articles_path %>        